<!DOCTYPE html>
<html>

    <head>
        <title><%= APP_NAME %>: <%= formName %></title>
        <%- include('../partials/header.ejs'); %>

        <style>
            div.form-container {
                display: flex;
                flex-direction: row;
                gap: 10px;
                justify-content: center;

                form {
                    background-color: white;
                    padding: 10px;
                    border-radius: 2%;
                    min-width: 50%;

                    display: flex;
                    flex-direction: column;
                    gap: 10px;
                }
            }
        </style>
    </head>

    <body>
        <%- include('../partials/app_banner.ejs'); %>

        <div role="presentation" id="app-container">

            <%- include('../partials/app_message.ejs'); %>
            <%- include('../partials/navbar.ejs'); %>

            <div id="main_div">

                <div class="form-container">
                    <%- include(formPath); %>
                </div>

            </div>

            <%- include('../partials/footer.ejs'); %>

        </div>
    </body>

</html>
