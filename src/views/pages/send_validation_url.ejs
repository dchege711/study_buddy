<!DOCTYPE html>
<html>

<head>
    <title><%= APP_NAME %>: Resend Validation URL</title>
    <%- include('../partials/header.ejs'); %>
</head>

<body onload="AppUtilities.processParams();">
    <%- include('../partials/app_banner.ejs'); %>

    <div role="presentation" id="app-container">

    <%- include('../partials/navbar.ejs'); %>

        <div id="main_div">

            <div id="form_container" class="form-container">

                <h5>Request a validation URL for your <%= APP_NAME %> Account</h5>

                <br />
                <br />

                <form method="post" id="send_validation_url_form">

                    <label for="email"> Type your email address below: </label>
                    <input class="w3-input" type="email" name="email" id="email" required/>

                    <br />
                    <br />

                    <button class="w3-button w3-center w3-green" type="submit" id="send_validation_url_button"
                    onclick="return sendValidationURL();">Send Validation URL</button>

                </form>
            </div>
        </div>


        <%- include('../partials/footer.ejs'); %>

        <script type="text/javascript" src="/src/SendValidationURL.bundle.min.js"></script>

    </div>

</body>

</html>
