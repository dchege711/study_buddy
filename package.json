{
  "name": "flashcards_server",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A web application that helps me review content",
  "main": "server.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "tests",
      "build",
      "coverage",
      "node_modules",
      "models/mongoose_models"
    ],
    "include": [
      "models",
      "views",
      "controllers"
    ]
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json && npm run webpack",
    "build:client": "cd src/public && npm run build && cd ../../",
    "start": "node dist/server.js",
    "debug": "ts-node-dev --files --transpile-only src/server.ts",
    "format": "dprint fmt",
    "format:check": "dprint check",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "single_test": "npm run build && ts-mocha",
    "test": "npm run test:server && npm run test:client",
    "test:server": "npm run mocha_tests",
    "test:client": "cd src/public && npm run test && cd ../../",
    "mocha_tests": "nyc ts-mocha --no-warnings --recursive --sort './src/tests/mocha_tests/*/*.ts' './src/**/*.test.ts' --exclude './src/public/**/*'",
    "webpack": "webpack --config ./webpack.config.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dchege711/study_buddy.git"
  },
  "keywords": [
    "study",
    "flashcards"
  ],
  "author": "Chege Gitau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dchege711/study_buddy/issues"
  },
  "homepage": "https://github.com/dchege711/study_buddy#readme",
  "dependencies": {
    "@lit/context": "^1.1.1",
    "@trpc/client": "^11.0.0-rc.342",
    "@trpc/server": "^11.0.0-rc.342",
    "avl": "^1.5.3",
    "body-parser": "^1.20.2",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.3",
    "ejs": "3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "1.15.6",
    "express-sslify": "^1.2.0",
    "highlight.js": "^11.9.0",
    "http-status-codes": "^2.3.0",
    "katex": "^0.16.10",
    "lit": "^3.1.3",
    "lusca": "^1.7.0",
    "markdown-it": "^14.1.0",
    "markdown-it-texmath": "^1.0.0",
    "mongoose": "^5.13.20",
    "nodemailer": "^6.9.9",
    "path": "0.12.7",
    "sjcl": "1.0.7",
    "validator": "^13.7.0",
    "xss": "1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/chai": "^4.3.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/express-sslify": "^1.2.5",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.1",
    "@types/mocha": "^10.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.8",
    "@types/sjcl": "^1.0.30",
    "@types/validator": "^13.11.9",
    "chai": "^4.3.7",
    "circular-dependency-plugin": "^5.0.2",
    "copy-webpack-plugin": "^11.0.0",
    "dprint": "^0.46.2",
    "ejs-lint": "^2.0.0",
    "esbuild-loader": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-interactive": "^11.0.2",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.9.3",
    "nyc": "^14.1.1",
    "source-map-loader": "^4.0.1",
    "ts-loader": "^9.4.3",
    "ts-mocha": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^7.12.0",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "why-is-node-running": "2.0.2"
  },
  "heroku-run-build-script": true
}
