{
  "name": "flashcards_by_c13u",
  "version": "1.0.0",
  "description": "A web application that helps me review content",
  "main": "server.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "tests",
      "build",
      "coverage",
      "node_modules",
      "models/mongoose_models"
    ],
    "include": [
      "models",
      "views",
      "controllers"
    ]
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "jsdoc": "jsdoc -r models",
    "start": "npm run build && node server.js",
    "debug": "nodemon --inspect=127.0.0.1:9229 server.js",
    "single_test": "mocha  --no-warnings --timeout 40000 ./tests/mocha_tests/unit_tests/TestGraph.js",
    "test": "node models/Miscellaneous.js && npm run mocha_tests && npm run selenium_tests",
    "mocha_tests": "nyc mocha --no-warnings --recursive --sort --timeout 40000 './tests/mocha_tests/*/*.js'",
    "selenium_tests": "cd tests/selenium_tests/ && nyc ./run_selenium_tests.sh firefox headless && cd ../../",
    "heroku-postbuild": "echo Skip build on Heroku", 
    "docs": "jsdoc -c ./config.jsdoc.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dchege711/study_buddy.git"
  },
  "keywords": [
    "study",
    "flashcards"
  ],
  "author": "Chege Gitau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dchege711/study_buddy/issues"
  },
  "homepage": "https://github.com/dchege711/study_buddy#readme",
  "dependencies": {
    "body-parser": "1.18.2",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "ejs": "2.6.1",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "express-sslify": "^1.2.0",
    "mongoose": "^5.3.11",
    "nodemailer": "^4.6.8",
    "path": "0.12.7",
    "showdown": "1.9.0",
    "sjcl": "1.0.7",
    "validator": "^10.7.1",
    "xss": "1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "babel": "^6.23.0",
    "babel-loader": "^8.0.4",
    "circular-dependency-plugin": "^5.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "highlightjs": "^9.12.0",
    "jsdoc": "~3.6.3",
    "mathjax": "^2.7.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "selenium-webdriver": "4.0.0-alpha.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "why-is-node-running": "2.0.2"
  },
  "heroku-run-build-script": true
}
