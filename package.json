{
  "name": "flashcards_by_c13u",
  "version": "1.0.0",
  "description": "A web application that helps me review content",
  "main": "server.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "tests",
      "build",
      "coverage",
      "node_modules",
      "models/mongoose_models"
    ],
    "include": [
      "models",
      "views",
      "controllers"
    ]
  },
  "scripts": {
    "build-webpack": "webpack --config webpack.config.js",
    "build": "tsc && npm run build-webpack",
    "jsdoc": "jsdoc -r models",
    "start": "npm run build && node dist/server.js",
    "debug": "ts-node-dev --files --transpile-only src/server.ts",
    "single_test": "npm run build && ts-mocha  --no-warnings ./dist/tests/mocha_tests/unit_tests/TestGraph.js",
    "test": "npm run mocha_tests",
    "mocha_tests": "npm run build && nyc ts-mocha --no-warnings --recursive --sort './src/tests/mocha_tests/*/*.ts' './src/**/*.test.ts'",
    "selenium_tests": "npm run build && cd dist/tests/selenium_tests/ && nyc ./run_selenium_tests.sh firefox headless && cd ../../",
    "docs": "jsdoc -c ./config.jsdoc.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dchege711/study_buddy.git"
  },
  "keywords": [
    "study",
    "flashcards"
  ],
  "author": "Chege Gitau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dchege711/study_buddy/issues"
  },
  "homepage": "https://github.com/dchege711/study_buddy#readme",
  "dependencies": {
    "@lit/context": "^1.1.1",
    "avl": "^1.5.3",
    "body-parser": "^1.20.2",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.3",
    "ejs": "3.1.10",
    "express": "^4.19.2",
    "express-session": "1.15.6",
    "express-sslify": "^1.2.0",
    "express-validator": "^7.0.1",
    "http-status-codes": "^2.3.0",
    "lit": "^3.1.3",
    "mongoose": "^5.13.20",
    "nodemailer": "^6.9.9",
    "path": "0.12.7",
    "showdown": "1.9.1",
    "sjcl": "1.0.7",
    "validator": "^13.7.0",
    "xss": "1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.8",
    "@types/selenium-webdriver": "^4.1.15",
    "@types/showdown": "^2.0.1",
    "@types/sjcl": "^1.0.30",
    "@types/validator": "^13.7.17",
    "babel": "^6.23.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.3.7",
    "circular-dependency-plugin": "^5.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^11.0.0",
    "ejs-lint": "^2.0.0",
    "highlightjs": "^9.12.0",
    "jsdoc": "^4.0.2",
    "mathjax": "^2.7.5",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.9.3",
    "nodemon": "^2.0.20",
    "nyc": "^14.1.1",
    "selenium-webdriver": "^4.10.0",
    "source-map-loader": "^4.0.1",
    "ts-loader": "^9.4.3",
    "ts-mocha": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "why-is-node-running": "2.0.2"
  },
  "heroku-run-build-script": true
}
