<!DOCTYPE html>
<html>

<head>
    <title><%= APP_NAME %>: Resend Validation URL</title>
    <%- include('../partials/header.ejs'); %>
</head>

<body onload="AppUtilities.processParams();">

    <%- include('../partials/navbar.ejs'); %>

        <div id="main_div">

            <div class="w3-padding-large w3-center" style="margin: 5% 25% 25% 25%" id="form_container">

                <h5>Request a validation URL for your <%= APP_NAME %> Account</h5>

                <br />
                <br />

                <form method="post" id="send_validation_url_form">

                    <label for="email"> Type your email address below: </label>
                    <input class="w3-input" type="email" name="email" id="email" required/>

                    <br />
                    <br />

                    <button class="w3-button w3-center w3-green" type="submit" id="send_validation_url_button"
                    onclick="return sendValidationURL();">Send Validation URL</button>

                </form>
            </div>
        </div>


        <%- include('../partials/footer.ejs'); %>

        <script type="text/javascript">
            function sendValidationURL() {
                AppUtilities
                    .sendForm("send_validation_url_form", location.href)
                    .then((response) => {
                        response = JSON.parse(response);
                        alert(response.message);
                        if (response.success) window.location = "/";
                    })
                    .catch((err) => { console.error(err); });

                return false;
            }
        </script>

</body>

</html>
